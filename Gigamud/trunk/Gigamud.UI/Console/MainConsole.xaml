<UserControl x:Class="Gigamud.UI.Console.MainConsole"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="271*" />
            <RowDefinition Height="29*" />
        </Grid.RowDefinitions>
        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="Viewer">
            <TextBlock Name="tblkConsole" TextWrapping="Wrap" HorizontalAlignment="Stretch" TextTrimming="None"/>
        </ScrollViewer>
        <TextBox HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Name="tbxMain" KeyDown="tbxMain_KeyDown"/>
    </Grid>
</UserControl>
