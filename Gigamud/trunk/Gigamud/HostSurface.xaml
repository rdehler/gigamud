<UserControl x:Class="MMX.HostSurface"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:giga="clr-namespace:MMX.UI.Console;assembly=MMX.UI"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <sdk:TabControl HorizontalAlignment="Stretch" Name="tabControl1" VerticalAlignment="Stretch">
            <sdk:TabItem Header="First" Name="tabItem1">
                <giga:MainConsole HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </sdk:TabItem>
            <!--sdk:TabItem Name="tabItem2" Header="Second">
                <giga:MainConsole HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </sdk:TabItem-->
        </sdk:TabControl>
    </Grid>
</UserControl>
